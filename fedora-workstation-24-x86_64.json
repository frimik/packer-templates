{
  "variables": {
    "version": "0.0.1",
    "box_organization": "tmtowtdi",
    "box_name": "fedora-workstation-24-x86_64",
    "s3bucket": "tmtowtdi-repo",
    "aws_access_key_id": "AKIAIEXRP53PIBVPSXGQ",
    "aws_secret_access_key": "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",
    "compression_level": "6",
    "cpus": "4",
    "disk_size": "40000",
    "headless": "false",
    "memory": "2048",
    "mirror": "http://download.fedoraproject.org/pub/fedora/linux",
    "ssh_timeout": "60m"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Fedora_64",
    "iso_url": "{{user `mirror`}}/releases/24/Workstation/x86_64/iso/Fedora-Workstation-netinst-x86_64-24-1.2.iso",
    "iso_checksum_url": "https://getfedora.org/en/static/checksums/Fedora-Workstation-24-x86_64-CHECKSUM",
    "iso_checksum_type": "sha256",
    "output_directory": "output-fedora-24-x86_64",
    "vm_name": "packer-fedora-workstation-24-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<tab> ",
      "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/fedora-workstation-24/anaconda-ks.cfg ",
      "biosdevname=0 ",
      "net.ifnames=0 ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/fedora/virtualbox.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/fedora/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "fedora-workstation-24-x86_64.box"
  },
  {
    "type": "vagrant-s3",
    "region": "eu-west-1",
    "bucket": "{{ user `s3bucket` }}",
    "manifest": "vagrant/json/{{ user `box_organization` }}/{{ user `box_name` }}.json",
    "box_dir": "vagrant/boxes/{{ user `box_organization` }}/{{ user `box_name` }}",
    "box_name": "{{ user `box_organization` }}{{ user `box_name` }}",
    "version": "{{ user `version` }}",
    "access_key_id": "{{ user `aws_access_key_id` }}",
    "secret_key": "{{ user `aws_secret_access_key` }}"
  }]
}
